include <stdio.h>
//Write  0<=n<=5, then write n numbers. Vivesti their Sum

int main() {
	int n, i, a, sum = 0;
	
	printf("Write N from 0 to 5\n");
	scanf("%d", &n);

    while (n<0 || n>5)
    {
		printf("From 0 to 5...\n");
		scanf("%d", &n);
    }

	if (n>-1 && n<6)
   {
		for (i = 1;i <= n; i++) 
    {
			printf("Write number %d\n", i);
			scanf("%d", &a);
			sum = sum + a;
		}
		printf("Sum of numbers: %d" ,sum);
	}
	return 0;
}
